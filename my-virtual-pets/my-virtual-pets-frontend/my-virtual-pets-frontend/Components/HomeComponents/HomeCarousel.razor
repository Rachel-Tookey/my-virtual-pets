@using my_virtual_pets_class_library.DTO
@using my_virtual_pets_frontend.Components.DisplayCards
@rendermode InteractiveServer

<Carousel Autoplay="CarouselAutoPlay.StartOnPageLoad" Interval="1000">
    <CarouselItem Active="true">
    <CarouselCard petCard="PetCardDataDTOs[0]"></CarouselCard>
    </CarouselItem>
    @foreach (var card in PetCardDataDTOs.Skip(1))
    {
        <CarouselItem>
            <CarouselCard petCard="card"></CarouselCard>
        </CarouselItem>
    }
</Carousel>


@code {
    [Parameter] public required List<PetCardDataDTO> PetCardDataDTOs { get; set; }
    

}