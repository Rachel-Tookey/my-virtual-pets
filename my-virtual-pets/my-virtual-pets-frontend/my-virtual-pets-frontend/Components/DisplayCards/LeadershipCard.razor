@using my_virtual_pets_class_library.DTO
@using my_virtual_pets_frontend.Components.IsPetted;
@using my_virtual_pets_frontend.Components.Icons
@rendermode InteractiveServer

<div class="leadercard">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-6">
                <div class="award">
                    @switch (index)
                    {
                        case 1: <First_svg/> break;
                        case 2: <Second_svg/> break;
                        case 3: <Third_svg/> break;
                    }
                </div>
                <div style="display:flex;justify-content:center;align-items:center;">
                    <img   class="leaderimage" src="@petCard.ImageUrl">
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-6">
                <div class="leaderstats pixeltext"  style="display:flex;justify-content:left">
                    <p>name: @petCard.PetName.ToLower()</p>
                    <p>owner: @petCard.OwnerUsername</p>
                    <p>nature: @petCard.Personality.ToString().ToLower()</p>
                    <IsPetted petCard="petCard"></IsPetted>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    
    [Parameter]
    public PetCardDataDTO petCard { get; set; }
    
    [Parameter] 
    public int index { get; set; }
    
}