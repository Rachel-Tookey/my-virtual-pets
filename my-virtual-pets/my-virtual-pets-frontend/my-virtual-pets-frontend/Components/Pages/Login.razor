@page "/log-in"
@using my_virtual_pets_frontend.Components.LoginSignupComponents
@rendermode InteractiveServer

<div class="container">
    <AuthorizeView>
        <NotAuthorized>
            <PageTitle>Log In | MyVirtualPets</PageTitle>
            <CascadingValue Value="Refresh">
                <LoginSignupFormSwitcher></LoginSignupFormSwitcher>
            </CascadingValue>
        </NotAuthorized>
        <Authorized>
            <PageTitle>Already Logged In! | MyVirtualPets</PageTitle>
            <div class="container text-center">
                <h1 class="page-title">You're Already Logged In!</h1>
            </div>
        </Authorized>
    </AuthorizeView>
</div>

@code {

    public bool Refresh { get; set; } = false; 

}