@rendermode InteractiveAuto

<nav class="navbar navbar-expand-md purple mb-4">
    <div class="pixeltext container-fluid">
        <a class="navbar-brand" href="">my-virtual-pets</a>
        <button class="navbar-toggler @NavButtonCssClass" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                aria-controls="navbarCollapse" aria-label="Toggle navigation" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse @NavBarCssClass" id="navbarCollapse" @onclick="ToggleNavMenu">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/" ActiveClass="nav-active" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Home
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/leaderboard"  ActiveClass="nav-active" Match=@NavLinkMatch.All>
                        <span class="oi oi-plus" aria-hidden="true"></span> Leaderboard
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/collection" ActiveClass="nav-active" Match=@NavLinkMatch.All>
                        <span class="oi oi-plus" aria-hidden="true"></span> Collection
                    </NavLink>
                </li>
                
                <AuthorizeView>
                <Authorized>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/my-account" ActiveClass="nav-active" Match=@NavLinkMatch.All>
                        <span class="oi oi-plus" aria-hidden="true"></span> My Account
                    </NavLink>
                </li>
                </Authorized>
                <NotAuthorized>

                <li class="nav-item">
                    <NavLink class="nav-link" href="/login" ActiveClass="nav-active" Match=@NavLinkMatch.All>
                        <span class="oi oi-plus" aria-hidden="true"></span> Register
                    </NavLink>
                </li>
                </NotAuthorized>
                </AuthorizeView>
            </ul>
        </div>
    </div>
</nav>

@code {
    private bool collapseNavMenu = true;
    private string? NavBarCssClass => collapseNavMenu ? null : "show";
    private string? NavButtonCssClass => collapseNavMenu ? "collapsed" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}